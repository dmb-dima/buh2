// предопределенная процедура проверяет логическую 
// связанность введенных данных
Процедура ПередЗаписью(Отказ, Замещение)
	
	Если ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли; 
	
	Если Не Отбор.Год.Использование 
		Или Не Отбор.ВидСтавокЕСНиПФР.Использование 
		Или Отбор.Год.ВидСравнения <> ВидСравнения.Равно 
		Или Отбор.ВидСтавокЕСНиПФР.ВидСравнения <> ВидСравнения.Равно Тогда
		Возврат;
	КонецЕсли;
	
	// проверяем набор записей
	Год = Отбор.Год.Значение;
	ВидСтавокЕСНиПФР = Отбор.ВидСтавокЕСНиПФР.Значение;
	ВременнаяТЗ = ЭтотОбъект.Выгрузить();
	ВременнаяТЗ.Сортировать("НомерСтрокиСтавок");
	
	Если ВременнаяТЗ.Количество() = 0 или ВременнаяТЗ.Количество() <> ВременнаяТЗ[Количество()-1].НомерСтрокиСтавок Или ВременнаяТЗ[0].НомерСтрокиСтавок <> 1 Тогда
		ОбщегоНазначения.СообщитьОбОшибке("В сведениях о ставках ЕСН обнаружены ошибки. Сведения не записаны!",Отказ);
		ОбщегоНазначения.СообщитьОбОшибке(Символы.Таб + "Неверно пронумерованы строки ставок",Отказ);
	КонецЕсли;
	
	Если Отказ Тогда
		Возврат
	КонецЕсли;
	
	Ошибки = Новый Массив;
	ПредыдущийПредел = 0;
	ПредыдущаяСтрока = Неопределено;	
	Для Каждого СтрокаТЗ Из ВременнаяТЗ Цикл
		
		Индекс = ВременнаяТЗ.Индекс(СтрокаТЗ);
		
		СтрокаТЗ.Год = Год;
		СтрокаТЗ.ВидСтавокЕСНиПФР = ВидСтавокЕСНиПФР;
		
		Если Индекс = 0 И СтрокаТЗ.СуммаДоходаС <> 0 Тогда
			Ошибки.Добавить("Нижний предел по первой строке должен быть нулевым");
		КонецЕсли;
		Если ПредыдущийПредел <> СтрокаТЗ.СуммаДоходаС Тогда
			Ошибки.Добавить("В строке "+СтрокаТЗ.НомерСтрокиСтавок+" нижний передел не совпадает с верхним переделом предыдущей строки");
		КонецЕсли;
		Если СтрокаТЗ.СуммаДоходаС >= СтрокаТЗ.СуммаДоходаПо Тогда
			Ошибки.Добавить("В строке "+СтрокаТЗ.НомерСтрокиСтавок+" верхний предел должен быть больше нижнего");
		КонецЕсли;
		
		// Расчет суммы фиксированной ставки в рублях от процентов предыдущего предела
		Если Индекс <> 0 Тогда
			
			СтрокаТЗ.ФедеральныйБюджетВРублях = ПредыдущаяСтрока.ФедеральныйБюджетВРублях + (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ФедеральныйБюджетВПроцентах / 100;				
			СтрокаТЗ.ФССВРублях 			= ПредыдущаяСтрока.ФССвРублях 				+ (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ФССвПроцентах / 100;				
			СтрокаТЗ.ФФОМСВРублях 			= ПредыдущаяСтрока.ФФОМСвРублях 			+ (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ФФОМСвПроцентах / 100;				
			СтрокаТЗ.ТФОМСВРублях 			= ПредыдущаяСтрока.ТФОМСвРублях 			+ (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ТФОМСвПроцентах / 100;				
			СтрокаТЗ.ПФРНакопительная1ВРублях = ПредыдущаяСтрока.ПФРНакопительная1вРублях + (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ПФРНакопительная1вПроцентах / 100;				
			СтрокаТЗ.ПФРНакопительная2ВРублях = ПредыдущаяСтрока.ПФРНакопительная2вРублях + (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ПФРНакопительная2вПроцентах / 100;				
			СтрокаТЗ.ПФРСтраховая1ВРублях 	= ПредыдущаяСтрока.ПФРСтраховая1вРублях 	+ (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ПФРСтраховая1вПроцентах / 100;				
			СтрокаТЗ.ПФРСтраховая2ВРублях 	= ПредыдущаяСтрока.ПФРСтраховая2вРублях 	+ (ПредыдущаяСтрока.СуммаДоходаПо - ПредыдущаяСтрока.СуммаДоходаС) * ПредыдущаяСтрока.ПФРСтраховая2вПроцентах / 100;				
			
		КонецЕсли; 
		
		// запомним для следующей итерации
		ПредыдущийПредел = СтрокаТЗ.СуммаДоходаПо;
		ПредыдущаяСтрока = СтрокаТЗ;
		
	КонецЦикла;
	
	Если Ошибки.Количество() > 0 Тогда
		ОбщегоНазначения.СообщитьОбОшибке("В сведениях о ставках ЕСН обнаружены ошибки. Сведения не записаны!",Отказ);
		Для Каждого Строка Из Ошибки Цикл
			ОбщегоНазначения.СообщитьОбОшибке(Символы.Таб + Строка,Отказ);
		КонецЦикла;
	Иначе
		ЭтотОбъект.Загрузить(ВременнаяТЗ)
	КонецЕсли;
	
КонецПроцедуры

// Добавляет запись в набор записей регистра "СведенияОСтавкахЕСНиПФР" 
//
Процедура ДобавитьЗначенияСтавокЕСН(НаборЗаписей, Год, ВидСтавокЕСНиПФР, НомерСтрокиСтавок, СуммаДоходаС, СуммаДоходаПо, 
	                                ФедеральныйБюджет = 0, ФСС = 0 , ФФОМС = 0, ТФОМС = 0, 
	                                ПФРНакопительная1 = 0, ПФРНакопительная2 = 0,
	                                ПФРСтраховая1 = 0, ПФРСтраховая2 = 0)

	НоваяЗапись = НаборЗаписей.Добавить();

	НоваяЗапись.Год				  = Год;
	НоваяЗапись.ВидСтавокЕСНиПФР  = ВидСтавокЕСНиПФР;
	НоваяЗапись.НомерСтрокиСтавок = НомерСтрокиСтавок;
	НоваяЗапись.СуммаДоходаС      = СуммаДоходаС;
	НоваяЗапись.СуммаДоходаПо     = СуммаДоходаПо;
	НоваяЗапись.ФССВПроцентах     = ФСС;
	НоваяЗапись.ФФОМСВПроцентах   = ФФОМС;
	НоваяЗапись.ТФОМСВПроцентах   = ТФОМС;
	НоваяЗапись.ФедеральныйБюджетВПроцентах = ФедеральныйБюджет;
	НоваяЗапись.ПФРНакопительная1ВПроцентах = ПФРНакопительная1;
	НоваяЗапись.ПФРНакопительная2ВПроцентах = ПФРНакопительная2;
	НоваяЗапись.ПФРСтраховая1ВПроцентах     = ПФРСтраховая1;
	НоваяЗапись.ПФРСтраховая2ВПроцентах     = ПФРСтраховая2;

КонецПроцедуры

