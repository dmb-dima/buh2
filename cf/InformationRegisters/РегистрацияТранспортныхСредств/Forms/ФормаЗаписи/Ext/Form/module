
Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
	
	Если НЕ РегистрСведенийМенеджерЗаписи.ВидЗаписи = Перечисления.ВидЗаписиОРегистрации.ПустаяСсылка() Тогда
	
		Отказ = Истина;
		
		Если РегистрСведенийМенеджерЗаписи.ВидЗаписи = Перечисления.ВидЗаписиОРегистрации.Регистрация Тогда
			Форма = РегистрСведенийМенеджерЗаписи.ПолучитьФорму("Регистрация");
			Форма.ПараметрОбъектКопирования = ПараметрОбъектКопирования;
			Форма.Открыть();
		Иначе
			Форма = РегистрСведенийМенеджерЗаписи.ПолучитьФорму("СнятиеСРегистрационногоУчета");
			Форма.ПараметрОбъектКопирования = ПараметрОбъектКопирования;
			Форма.Открыть();
		КонецЕсли;

	КонецЕсли;
	
КонецПроцедуры
