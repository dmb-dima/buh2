
Процедура КнопкаВыполнитьНажатие(Элемент)

	// Заполним структуру возвращаемых параметров
	СтруктураВозвращаемыхЗначений = Новый Структура();

	СтруктураВозвращаемыхЗначений.Вставить("Графа4",      Графа4);
	СтруктураВозвращаемыхЗначений.Вставить("Графа5",      Графа5);
	СтруктураВозвращаемыхЗначений.Вставить("Графа6",      Графа6);
	СтруктураВозвращаемыхЗначений.Вставить("Графа7",      Графа7);
	СтруктураВозвращаемыхЗначений.Вставить("НДС" ,        НДС);
	СтруктураВозвращаемыхЗначений.Вставить("ДоходыЕНВД",  ДоходЕНВД);
	СтруктураВозвращаемыхЗначений.Вставить("РасходыЕНВД", РасходЕНВД);
	СтруктураВозвращаемыхЗначений.Вставить("Содержание" , Содержание);
	СтруктураВозвращаемыхЗначений.Вставить("АвтоРежим" ,  АвтоРежим);

	// Все сделали, можно закрывать форму
	Закрыть(СтруктураВозвращаемыхЗначений);

КонецПроцедуры

Процедура ДоступностьГрафы5()

	Если ДоходЕНВД Тогда

		Графа5 = 0;

		ЭлементыФормы.Графа5.Доступность = Ложь;

	Иначе

		ЭлементыФормы.Графа5.Доступность = Истина;

	КонецЕсли;

КонецПроцедуры

Процедура ДоходЕНВДПриИзменении(Элемент)

	ДоступностьГрафы5();

КонецПроцедуры

Процедура ПриОткрытии()
	
	Если ТолькоДоходы Тогда
		Если ДоходЕНВД Тогда
			ДоходЕНВД = Ложь;
		КонецЕсли;
		ЭлементыФормы.ДоходЕНВД.Видимость	= Ложь;
		
		ЭлементыФормы.Графа6.Доступность     = Ложь;
		ЭлементыФормы.Графа7.Доступность     = Ложь;
		ЭлементыФормы.НДС.Доступность        = Ложь;
		ЭлементыФормы.РасходЕНВД.Доступность = Ложь;
				
	Иначе
		ЭлементыФормы.ДоходЕНВД.Видимость	= Истина;
	КонецЕсли;
	
	ДоступностьГрафы5();
	АвтоРежимПриИзменении();

КонецПроцедуры

Процедура АвтоРежимПриИзменении()
	
	ЭлементыФормы.ПанельОсновная.ТекущаяСтраница = ?(АвтоРежим, ЭлементыФормы.ПанельОсновная.Страницы.СтраницаАвтоРежим, ЭлементыФормы.ПанельОсновная.Страницы.СтраницаРучнойРежим);

КонецПроцедуры
