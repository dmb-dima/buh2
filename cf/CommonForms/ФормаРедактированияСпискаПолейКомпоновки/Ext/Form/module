
Процедура ОсновныеДействияФормыОК(Кнопка)
	
	СписокПолей.Очистить();
	Для каждого Строка Из ТаблицаПолей Цикл
		СписокПолей.Добавить(Строка.Поле);
	КонецЦикла;
	Закрыть(Истина);
	
КонецПроцедуры

Процедура ПоляЗначениеНачалоВыбора(Элемент, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	ФормаВыбораПоля = ПолучитьОбщуюФорму("ФормаВыбораДоступногоПоляКомпоновщикаНастроек", ЭтаФорма);
	ФормаВыбораПоля.КомпоновщикНастроек = ВладелецФормы.КомпоновщикНастроек;
	ФормаВыбораПоля.Режим = "Все";
	Результат = ФормаВыбораПоля.ОткрытьМодально();
	Если Результат = Неопределено Тогда
		Возврат;
	КонецЕсли;
	Элемент.Значение = Строка(Результат.Поле);

КонецПроцедуры

Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
	
	Для каждого ЗначениеСписка Из СписокПолей Цикл
		НоваяСтрока = ТаблицаПолей.Добавить();
		НоваяСтрока.Поле = ЗначениеСписка.Значение;
	КонецЦикла;
	
КонецПроцедуры
