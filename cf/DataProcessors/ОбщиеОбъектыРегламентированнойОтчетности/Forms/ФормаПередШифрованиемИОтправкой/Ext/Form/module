Перем СтатусЗакрытия;

Процедура ОсновныеДействияФормыОтмена(Кнопка)
	
	Закрыть();
	
КонецПроцедуры

Процедура ПередЗакрытием(Отказ, СтандартнаяОбработка)
	
	Если НЕ СтатусЗакрытия Тогда
		Закрыть(Ложь);
	Иначе
		Закрыть(Истина);
	КонецЕсли;
	
КонецПроцедуры

Процедура ОсновныеДействияФормыКнопкаПродолжить(Кнопка)
	
	СтатусЗакрытия = Истина;
	Закрыть();
	
КонецПроцедуры

СтатусЗакрытия = Ложь;