////////////////////////////////////////////////////////////////////////////////
// ПРОЦЕДУРЫ И ФУНКЦИИ ОБЩЕГО НАЗНАЧЕНИЯ

// Процедура возвращает выбранные значения в родительскую форму.
//
Процедура ВернутьЗначения()

	СтруктураПараметров = Новый Структура();
	СтруктураПараметров.Вставить("ВыбраннаяНоменклатура", ЭлементыФормы.ТаблицаНоменклатуры.ТекущиеДанные.Номенклатура);
	СтруктураПараметров.Вставить("Родитель",              ЭлементыФормы.ТаблицаНоменклатуры.ТекущиеДанные.Родитель);

	Закрыть(СтруктураПараметров);

КонецПроцедуры // ВернутьЗначения()

////////////////////////////////////////////////////////////////////////////////
// ОБРАБОТЧИКИ СОБЫТИЙ, ВЫЗЫВАЕМЫЕ ИЗ ЭЛЕМЕНТОВ ФОРМЫ

// Процедура - обработчик события "Нажатие" кнопки "ОК".
//
Процедура ОсновныеДействияФормыОК(Кнопка)

	ВернутьЗначения();

КонецПроцедуры // ОсновныеДействияФормыОК()

// Процедура - обработчик события "Выбор" табличного поля "ТаблицаНоменклатуры".
//
Процедура ТаблицаНоменклатурыВыбор(Элемент, ВыбраннаяСтрока, Колонка, СтандартнаяОбработка)

	ВернутьЗначения();

КонецПроцедуры // ТаблицаНоменклатурыВыбор()






