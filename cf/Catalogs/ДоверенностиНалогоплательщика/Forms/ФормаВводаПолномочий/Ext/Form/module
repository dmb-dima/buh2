
Процедура УправлениеЭУ()
	ЭлементыФормы.СписокПризнаков.Доступность = НЕ ПолныеПолномочия;
	ЭлементыФормы.КоманднаяПанельСписокПризнаков.Доступность = НЕ ПолныеПолномочия;
	
	ЭлементыФормы.НадписьКПП.Видимость = ОтображатьКПП;
	ЭлементыФормы.КПП.Видимость = ОтображатьКПП;
КонецПроцедуры

Процедура ПодтвердитьИзменения(Кнопка)
	СтруктураДанных.ОКАТО = ОКАТО;	
	СтруктураДанных.КПП = КПП;	
	
	СтруктураДанных.ПризнакПолныеПолномочия = ПолныеПолномочия; 
	
	Если ПолныеПолномочия Тогда
		Для каждого Признак Из СписокПризнаков Цикл
			СтруктураДанных["Признак" + Признак.Значение] = Ложь;
		КонецЦикла;
	Иначе
		Для каждого Признак Из СписокПризнаков Цикл
			СтруктураДанных["Признак" + Признак.Значение] = Признак.Пометка;
		КонецЦикла;	
		
	КонецЕсли;
	
	Модифицированность = Ложь;
	Закрыть(Истина);
КонецПроцедуры

Процедура ПередЗакрытием(Отказ, СтандартнаяОбработка)
	Если Модифицированность Тогда
		ОтветНаВопрос = Вопрос("Данные были изменены. Закрыть без сохранения?", РежимДиалогаВопрос.ДаНет);
		Если ОтветНаВопрос = КодВозвратаДиалога.Да Тогда
			Закрыть();
		ИначеЕсли ОтветНаВопрос = КодВозвратаДиалога.Нет Тогда
			Отказ = Истина;
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

Процедура ПолныеПолномочияПриИзменении(Элемент)
	УправлениеЭУ();
КонецПроцедуры

Процедура ПриОткрытии()
	ОКАТО = СтруктураДанных.ОКАТО;	
	КПП = СтруктураДанных.КПП;	
	
	ПолныеПолномочия = СтруктураДанных.ПризнакПолныеПолномочия; 
	
	Если НЕ ПолныеПолномочия Тогда
		Для каждого Признак Из СписокПризнаков Цикл
			Признак.Пометка = СтруктураДанных["Признак" + Признак.Значение];
		КонецЦикла;	
	КонецЕсли;
	
	УправлениеЭУ();
КонецПроцедуры

Процедура КоманднаяПанельСписокПризнаковУстановитьФлажки(Кнопка)
	Для каждого Признак Из СписокПризнаков Цикл
		Признак.Пометка = Истина;
	КонецЦикла;
КонецПроцедуры

Процедура КоманднаяПанельСписокПризнаковСнятьФлажки(Кнопка)
	Для каждого Признак Из СписокПризнаков Цикл
		Признак.Пометка = Ложь;
	КонецЦикла;
КонецПроцедуры

