
Процедура Сформировать(Кнопка)
	
	СформироватьОтчет(ЭлементыФормы.ТитульныйЛист, ЭлементыФормы.Раздел1);
	
КонецПроцедуры

////////////////////////////////////////////////////////////////////////////////
// ПРОЦЕДУРЫ - ОБРАБОТЧИКИ СОБЫТИЙ ФОРМЫ

Процедура ПриОткрытии()
	
	Если НЕ ЗначениеЗаполнено(ДатаНач) Тогда
		ДатаНач=НачалоГода(РабочаяДата);
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ДатаКон) Тогда
		ДатаКон=КонецГода(РабочаяДата);
	КонецЕсли;
	
	// Проверка ведения однофирменности
	Если ЗначениеЗаполнено(глЗначениеПеременной("ОсновнаяОрганизация")) Тогда 
		 
		Организация = глЗначениеПеременной("ОсновнаяОрганизация") 
		
	КонецЕсли;
 
КонецПроцедуры
 
Процедура КнопкаНастройкаПериодаНажатие(Элемент)
	
	Если НП.Редактировать() Тогда
		
		ДатаНач = НП.ПолучитьДатуНачала();
		ДатаКон = НП.ПолучитьДатуОкончания();
		
	КонецЕсли;
	
КонецПроцедуры



