	СтандартнаяОбработка = Ложь;
	
КонецПроцедуры

Процедура ОбработкаОповещения(ИмяСобытия, Параметр, Источник)
	
	РегламентированнаяОтчетность.ОбработкаОповещенияОбИзмененииСтатусаРегламентированногоОтчета(ЭтаФорма, ИмяСобытия, Параметр, Источник);
	
КонецПроцедуры


Процедура СобратьДанныеРаздел2()
    МассивКодЕдиницы = Новый Массив;
	
	Ответ = Вопрос("Перед сбором данных с листов Приложений необходимо произвести очистку Раздела 2. Продолжить?", РежимДиалогаВопрос.ДаНет,, КодВозвратаДиалога.Нет);
	Если Ответ = КодВозвратаДиалога.Нет Тогда
		Возврат;
	КонецЕсли;
		
	РегламентированнаяОтчетность.ОчиститьПоказателиОтчетаЗаполняемыеИзИБ(ЭтаФорма, "Раздел2");
	
	ДанныеДляЗаполнения = Новый ТаблицаЗначений;
	ДанныеДляЗаполнения.Колонки.Добавить("КБК");
	ДанныеДляЗаполнения.Колонки.Добавить("КодВида");
	ДанныеДляЗаполнения.Колонки.Добавить("КодЕдиницы");
	ДанныеДляЗаполнения.Колонки.Добавить("НалогБаза");

	РегламентированнаяОтчетность.роСохранитьДанныеМногостраничногоРазделаВактивнойСтранице(ЭтаФорма, "Раздел2_Прил1", Ложь);

	ТаблицаСтраницРаздела2_Прил1 = Неопределено;
	Если НЕ мСтруктураМногостраничныхРазделов.Свойство("Раздел2_Прил1", ТаблицаСтраницРаздела2_Прил1) Тогда
		Возврат;
	КонецЕсли;

	КБК = "";
	КодВида = "";
	КодЕдиницы = "";
	П000210005003 = 0;
	
	Для Инд = 0 По ТаблицаСтраницРаздела2_Прил1.Количество() - 1 Цикл

		ТекЭкземпляр        =  ТаблицаСтраницРаздела2_Прил1[Инд].Данные;
		ТекЭкземплярДопСтр  =  ТаблицаСтраницРаздела2_Прил1[Инд].ДанныеДопСтрок;

		ТекЭкземпляр.Свойство("П000210003001", КБК);
		ТекЭкземпляр.Свойство("П000210001001", КодВида);
		ТекЭкземпляр.Свойство("П000210002001", КодЕдиницы);
		ТекЭкземпляр.Свойство("П000210005003", П000210005003);

		Если НЕ РегламентированнаяОтчетность.ПустоеЗначение(КБК) И НЕ РегламентированнаяОтчетность.ПустоеЗначение(КодВида) Тогда

			НовСтрока = ДанныеДляЗаполнения.Добавить();
			НовСтрока.КБК = КБК;
			НовСтрока.КодВида = КодВида;
			НовСтрока.КодЕдиницы = КодЕдиницы;                                   
			НовСтрока.НалогБаза = П000210005003;
		Иначе
			НомДопСтр = Инд + 1;
			Сообщить("В Приложении к декларации (доп. страница " + НомДопСтр + ") не указан КБК или Код вида подакцизного товара!" , СтатусСообщения.Внимание);
			Возврат;
			
		КонецЕсли;
		
	КонецЦикла;

		
	НовДанныеДляЗаполнения = ДанныеДляЗаполнения.Скопировать();
	ДанныеДляЗаполнения.Свернуть("КБК, КодВида", "НалогБаза"); 	
	ДанныеДляЗаполнения.Сортировать("КБК");
	// повторяем сортировку для воссановления порядка следования строк в ТЗ
	ДанныеДляЗаполнения.Сортировать("КБК");

	// проверка, если пользователь создал несколько приложений с 
	// одинаковым КБК и ВидомПодакциза, но с разными Единицами Измерения
	
	ДанныеДляЗаполнения.Колонки.Добавить("КодЕдиницы");
		
	Для Каждого Стр Из ДанныеДляЗаполнения Цикл
		КолВхождений = 0;
		
		Для каждого НовСтр Из НовДанныеДляЗаполнения Цикл 			
			Если Стр.КБК = НовСтр.КБК И Стр.КодВида = НовСтр.КодВида Тогда
				Если КолВхождений = 0 Тогда 
					МассивКодЕдиницы.Добавить(НовСтр.КодЕдиницы);
					КолВхождений = КолВхождений + 1;
				Иначе
					Если МассивКодЕдиницы.Найти(НовСтр.КодЕдиницы) = Неопределено Тогда
						МассивКодЕдиницы.Добавить(НовСтр.КодЕдиницы);
					КонецЕсли;
				КонецЕсли;	
			КонецЕсли;				
		КонецЦикла;
		
		Если МассивКодЕдиницы.Количество()= 1 Тогда
			Стр.КодЕдиницы = МассивКодЕдиницы[0];
		Иначе
			Стр.КодЕдиницы = "";
		КонецЕсли;
		
		МассивКодЕдиницы.Очистить();
	КонецЦикла; 
	
	ТаблицаСтраницРаздела2 = Неопределено;
	Если НЕ мСтруктураМногостраничныхРазделов.Свойство("Раздел2", ТаблицаСтраницРаздела2) Тогда
		Возврат;
	КонецЕсли;
	
	// КоличествоДопСтрокНаЛисте = 20;
	
	КБКЛиста = ДанныеДляЗаполнения[0].КБК;
	
	Инд = 0;
    	
	Для Каждого ТекСтр Из ДанныеДляЗаполнения Цикл  		
		Если КБКЛиста <> ТекСтр.КБК Тогда			
			Инд = 0;
			КБКЛиста = ТекСтр.КБК;
			ВставитьДополнительнуюСтраницу("Раздел2");
		КонецЕсли;	
		
		Если Инд > 19 Тогда
				ВставитьДополнительнуюСтроку("П0002000040");
		КонецЕсли;
			ОкончаниеИмениОбласти = Формат(Инд + 1, "ЧГ=");
			мРаздел2.Области["П000200002001"].Значение = ТекСтр.КБК;
			мРаздел2.Области["П000200004001_" + ОкончаниеИмениОбласти].Значение = ТекСтр.КодВида;
			мРаздел2.Области["П000200004002_" + ОкончаниеИмениОбласти].Значение = ТекСтр.КодЕдиницы;
			мРаздел2.Области["П000200004003_" + ОкончаниеИмениОбласти].Значение = ТекСтр.НалогБаза;		
			Инд = Инд + 1;
			ОбновитьСтруктуруМногострочногоРаздела("П0002000040");		
	КонецЦикла;
	
	Модифицированность = Истина;
КонецПроцедуры

Процедура СобратьДанныеНажатие(Элемент)
	
	СобратьДанныеРаздел2()

КонецПроцедуры



////////////////////////////////////////////////////////////////////////////////
// ОПЕРАТОРЫ ОСНОВНОЙ ПРОГРАММЫ

мСоставПоказателей = "СоставПоказателей2010Кв3";

// Создаем список кодов видов легковых автомобилей и мотоциклов.
мСписокКодовАвто = Новый СписокЗначений;
мСписокКодовАвто.Добавить(510);
мСписокКодовАвто.Добавить(520);
мСписокКодовАвто.Добавить(531);
мСписокКодовАвто.Добавить(532);

// Список выбора поля выбора "Единица измерения"
ЭлементыФормы.ПолеВыбораЕдиницаИзмерения.СписокВыбора.Добавить(Перечисления.ПорядкиОкругленияОтчетности.Окр1,       "в рублях");
ЭлементыФормы.ПолеВыбораЕдиницаИзмерения.СписокВыбора.Добавить(Перечисления.ПорядкиОкругленияОтчетности.Окр1000,    "в тысячах рублей");
ЭлементыФормы.ПолеВыбораЕдиницаИзмерения.СписокВыбора.Добавить(Перечисления.ПорядкиОкругленияОтчетности.Окр1000000, "в миллионах рублей");

СоответствиеЕдиницыИзмеренияДелителю = Новый Соответствие;
СоответствиеЕдиницыИзмеренияДелителю.Вставить(Перечисления.ПорядкиОкругленияОтчетности.Окр1, 1);
СоответствиеЕдиницыИзмеренияДелителю.Вставить(Перечисления.ПорядкиОкругленияОтчетности.Окр1000, 1000);
СоответствиеЕдиницыИзмеренияДелителю.Вставить(Перечисления.ПорядкиОкругленияОтчетности.Окр1000000, 1000000);

МассивДата = Новый Массив;
МассивДата.Добавить(Тип("Дата"));
КвалификаторДата = Новый КвалификаторыДаты(ЧастиДаты.Дата);

мОписаниеТиповДата 		= Новый ОписаниеТипов(МассивДата, КвалификаторДата);
мОписаниеТиповЧислоЕ 	= Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(17, 2));
мОписаниеТиповСтрока3   = Новый ОписаниеТипов("Строка", Новый КвалификаторыСтроки(3));
мОписаниеТиповСтрока7   = Новый ОписаниеТипов("Строка", Новый КвалификаторыСтроки(7));
мОписаниеТиповСтрока9   = Новый ОписаниеТипов("Строка", Новый КвалификаторыСтроки(9));
мОписаниеТиповЧисло62 	= Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(6, 2));
мОписаниеТиповЧисло14_3 = Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(14, 3));
                                                                   
// ОПИСАНИЕ ПАРАМЕТРОВ МНОГОСТРОЧНЫХ ГРУПП
// Идентификаторы многострочных групп
мИдГруппы20 = "П0002000040";
мИдГруппы21 = "П0002100040";

// количество строк многострочных разделов по "бумажной" форме отчета
// (минимальное количество строк, которое должно присутствовать всегда)
КолИсхСтрокИдГруппы20 = 20;
КолИсхСтрокИдГруппы21 = 20;

// структура строк многострочного раздела на странице
СтруктураГруппы20 = Новый ТаблицаЗначений;
СтруктураГруппы20.Колонки.Добавить("П000200004001", мОписаниеТиповСтрока3);
СтруктураГруппы20.Колонки.Добавить("П000200004002", мОписаниеТиповСтрока3);
СтруктураГруппы20.Колонки.Добавить("П000200004003", мОписаниеТиповЧисло14_3);

СтруктураГруппы21 = Новый ТаблицаЗначений;
СтруктураГруппы21.Колонки.Добавить("П000210004001", мОписаниеТиповЧисло62);
СтруктураГруппы21.Колонки.Добавить("П000210004002", мОписаниеТиповЧисло14_3);
СтруктураГруппы21.Колонки.Добавить("П000210004003", мОписаниеТиповЧисло14_3);

// структура многострочных разделов формы
мСтруктураМногострочныхРазделов = Новый Структура;
мСтруктураМногострочныхРазделов.Вставить(мИдГруппы20, СтруктураГруппы20);
мСтруктураМногострочныхРазделов.Вставить(мИдГруппы21, СтруктураГруппы21);

// структура исходных строк (минимального кол-ва) многострочных разделов формы
мСтруктураИсхКолвоСтрокРазделов = Новый Структура;
мСтруктураИсхКолвоСтрокРазделов.Вставить(мИдГруппы20, КолИсхСтрокИдГруппы20);
мСтруктураИсхКолвоСтрокРазделов.Вставить(мИдГруппы21, КолИсхСтрокИдГруппы21);

ЦветЗаполняетсяТолькоВручную     = Новый Цвет(255, 255, 225);
ЦветЗаполняетсяАвтоКорректир     = Новый Цвет(255, 240, 200);
ЦветЗаполняетсяАвтоБезКорректир  = Новый Цвет(230, 240, 220);
ЦветЗаполняетсяАвтоАрифметика    = Новый Цвет(192, 220, 192); // ЗЕЛЕНЫЙ
ЦветЗаполняетсяОднозначноВручную = Новый Цвет(255, 255, 192); // ЖЕЛТЫЙ
ЦветЗаполняетсяАвтоматически     = Новый Цвет(255, 255, 255); // Белый, Ввод запрещен

// структура цветов раскраски автозаполняемых ячеек
мСтруктураЦветовРаскраски = Новый Структура;
мСтруктураЦветовРаскраски.Вставить("_1", ЦветЗаполняетсяТолькоВручную);
мСтруктураЦветовРаскраски.Вставить("_2", ЦветЗаполняетсяАвтоКорректир);
мСтруктураЦветовРаскраски.Вставить("_3", ЦветЗаполняетсяАвтоБезКорректир);
мСтруктураЦветовРаскраски.Вставить("_4", ЦветЗаполняетсяАвтоАрифметика);
мСтруктураЦветовРаскраски.Вставить("_0", ЦветЗаполняетсяОднозначноВручную);
мСтруктураЦветовРаскраски.Вставить("_5", ЦветЗаполняетсяАвтоматически);

ТаблицаСтраницыРаздела = ПолучитьТаблицуМногостраничногоРаздела();
ТаблицаСтраницыРазделаДляМногострочныхРазделов=ПолучитьТаблицуМногостраничногоРаздела(Истина);
мСтруктураМногостраничныхРазделов = Новый Структура;
мСтруктураМногостраничныхРазделов.Вставить("Раздел2", ТаблицаСтраницыРазделаДляМногострочныхРазделов.Скопировать());
мСтруктураМногостраничныхРазделов.Вставить("Раздел2_Прил1", ТаблицаСтраницыРазделаДляМногострочныхРазделов.Скопировать());

// Версия формы
мВерсияФормы = "09/07/2010";

// Код отчета, равен КНД
мКодОтчета = "1151088";

ВариантыФорматовВыгрузки = Новый СписокЗначений;
ВариантыФорматовВыгрузки.Добавить(мСоставПоказателей, "Формат 5.01", Истина);

