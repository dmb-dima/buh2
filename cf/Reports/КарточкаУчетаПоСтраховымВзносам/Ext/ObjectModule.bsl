					СНачалаГода.НарастПособия = 0;
					СНачалаГода.НарастВыплатыПрокуроров = 0;
					СНачалаГода.НарастВыплатыПоДоговорам = 0;
					СНачалаГода.НарастНалоговаяБазаПФР = 0;
					СНачалаГода.НарастНалоговаяБазаФСС = 0;
