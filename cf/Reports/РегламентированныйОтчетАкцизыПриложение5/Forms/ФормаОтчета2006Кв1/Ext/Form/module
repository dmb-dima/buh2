// КнопкаДобавитьДопСтраницуРаздел23Нажатие
//
Процедура КнопкаДобавитьДопСтраницуРаздел23Нажатие(Элемент)

	П000230003004 = мРаздел23.Области.П000230003004.Значение;
	П000230004004 = мРаздел23.Области.П000230004004.Значение;
	П000230005004 = мРаздел23.Области.П000230005004.Значение;
	П000230006004 = мРаздел23.Области.П000230006004.Значение;
	П000230007004 = мРаздел23.Области.П000230007004.Значение;

	ИзменитьТаблицуПараметровАвтозаполнения(1, "Раздел23");
	ВставитьДополнительнуюСтраницу("Раздел23");

	мРаздел23.Области.П000230003004.Значение = П000230003004;
	мРаздел23.Области.П000230004004.Значение = П000230004004;
	мРаздел23.Области.П000230005004.Значение = П000230005004;
	мРаздел23.Области.П000230006004.Значение = П000230006004;
	мРаздел23.Области.П000230007004.Значение = П000230007004;

КонецПроцедуры // КнопкаДобавитьДопСтраницуРаздел23Нажатие

// ПолеТабличногоДокументаРаздел21П000210003008ПриИзменении
